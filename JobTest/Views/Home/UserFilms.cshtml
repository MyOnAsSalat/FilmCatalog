@model JobTest.Models.Film[]
@{
    ViewBag.Title = "My films";
}

<h2>My films</h2>

<p>
    @Html.ActionLink("Post new film", "NewFilm")
</p>
<table class="table table-hover">
    <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @{
        if (Model != null)
        {
            foreach (var item in Model)
            {
    <tr>
        <td>
            <a href="/home/film?filmid=@item.FilmId">@Html.DisplayFor(modelItem => item.Title)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            <a href="/home/EditFIlm?filmid=@item.FilmId">Edit</a>
        </td>
        <td>
            <a href="/home/DeleteFilm?filmid=@item.FilmId">Delete</a>
        </td>
    </tr>
            }
        }
    }
</table>
