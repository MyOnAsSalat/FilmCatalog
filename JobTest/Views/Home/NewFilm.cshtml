@model JobTest.Models.Film
 
@{
    ViewBag.Title = "Create";
}
 
@using (Html.BeginForm("AddFilm", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add new film</legend>
 
        <div class="editor-label">Название</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
            @Html.EditorFor(model => model.Producer)
            @Html.ValidationMessageFor(model => model.Producer)
            @Html.EditorFor(model => model.Year)
            @Html.ValidationMessageFor(model => model.Year)
        </div>
 
        <div class="editor-label">Файл изображения</div>
        <div class="editor-field">
            <input type="file" name="image"  accept="image/png"/>
        </div>
 
        <p>
            <input type="submit" value="Post" />
        </p>
    </fieldset>
}
 
<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>
 
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}